{
  "name": "imagina-maternoinfantil-api",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "limpiar": "rimraf ./api/",
    "copiar": "copyfiles -u 1 src/datos/*.xlsx api/",
    "build": "tsc -p tsconfig.json",
    "dev": "yarn limpiar && yarn copiar && yarn dev:inicio",
    "dev:inicio": "concurrently --kill-others-on-fail --raw \"yarn dev:ts\" \"yarn dev:api\"",
    "dev:ts": "tsc -w --preserveWatchOutput",
    "dev:api": "wait-on api/index.js && nodemon api/index.js"
  },
  "dependencies": {
    "@fastify/cors": "^7.0.0",
    "cli-color": "^2.0.2",
    "cli-progress": "^3.11.0",
    "fastify": "^3.29.0",
    "node-emoji": "^1.11.0",
    "pg": "^8.7.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.2",
    "@types/cli-progress": "^3.9.2",
    "@types/keyv": "^3.1.4",
    "@types/node": "^17.0.31",
    "@types/node-emoji": "^1.8.1",
    "@types/pg": "^8.6.5",
    "concurrently": "^7.1.0",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.0.0",
    "nodemon": "^2.0.16",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4",
    "wait-on": "^6.0.1"
  },
  "nodemonConfig": {
    "ignore": [
      "./api/datos/*"
    ]
  }
}
