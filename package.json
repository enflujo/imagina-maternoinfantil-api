{
  "name": "imagina-maternoinfantil-api",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "limpiar": "rimraf ./api/",
    "build": "tsc -p tsconfig.json",
    "dev": "yarn limpiar && yarn dev:inicio",
    "dev:inicio": "concurrently --kill-others-on-fail --raw \"yarn dev:ts\" \"yarn dev:api\"",
    "dev:ts": "tsc -w --preserveWatchOutput",
    "dev:api": "wait-on api/index.js && nodemon api/index.js",
    "lint": "prettier --check .",
    "lint:fix": "prettier --write --list-different .",
    "prisma:format": "prisma format",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name inicio",
    "prisma:push": "prisma db push",
    "prisma:seed": "prisma db seed",
    "prisma:borrar": "ts-node ./src/prisma/borrarTodo.ts",
    "limpiar:exportados": "rimraf ./datos/exportados/**/*"
  },
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "@prisma/client": "4.1.0",
    "cli-color": "^2.0.3",
    "cli-progress": "^3.11.2",
    "fastify": "^4.3.0",
    "fastify-plugin": "^4.0.0",
    "node-emoji": "^1.11.0",
    "pg": "^8.7.3",
    "xlstream": "^2.5.2"
  },
  "devDependencies": {
    "@types/cli-color": "^2.0.2",
    "@types/cli-progress": "^3.11.0",
    "@types/geojson": "^7946.0.10",
    "@types/keyv": "^3.1.4",
    "@types/node": "^18.0.6",
    "@types/node-emoji": "^1.8.1",
    "@types/pg": "^8.6.5",
    "concurrently": "^7.3.0",
    "dotenv": "^16.0.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prisma": "^4.1.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "wait-on": "^6.0.1"
  },
  "nodemonConfig": {
    "ignore": [
      "./datos/*"
    ]
  },
  "prisma": {
    "schema": "src/prisma/esquema.prisma",
    "seed": "ts-node src/prisma/seed.ts"
  }
}
